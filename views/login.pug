doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login
    link(rel="stylesheet", type="text/css", href="/css/login.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer")

  body 
    #login-user-interface
      form#log-in-section
        ul(class="wallet", id="wallet-ul")
          li#wallet-back
            img(class="wallet-1", src='/img/Wallet-back.png', alt="Expense", height="116px")
          li#wallet-dollar
            img(class="waller-2", src="/img/Dollars.png", alt="Expense", height="120px")
          li#wallet-front
            img(class="waller-3", src="/img/Wallet-front.png", alt="Expense", height="120px")
        .input-section
          .user-section
            i(class="fa-solid fa-user", id="user-icon")
            label.user-na-pass Username:
          input(type="text", id="input-user", class="log-input", placeholder="email@example.com", required)
          .password-section
            i(class="fa-solid fa-lock" id="password-icon")
            label.user-na-pass Password:
          input(type="password" id="input-pass" class="log-input" placeholder="Password" required)
        #failed-login
          h2.failed-login-message
        #buttons
          button(id="login-btn", type="submit") Login
          button(id="signUp-btn", type="button") SignUp
    script(type="module", src="../pages/login.js")
